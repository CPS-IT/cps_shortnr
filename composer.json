{
    "name": "cpsit/shortnr",
    "description": "routing alias enhancer over middleware",
    "type": "typo3-cms-extension",
    "keywords": ["TYPO3", "extension", "routing"],
    "homepage": "https://github.com/CPS-IT/cps_shortnr",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Benjamin Rannow",
            "email": "b.rannow@familie-redlich.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "brannow/typed-pattern-engine": "dev-main",
        "typo3/minimal": "^13.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "typo3/testing-framework": "*",
        "brannow/typo3-dev-springboard": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "CPSIT\\ShortNr\\": "Classes/"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "sort-packages": true,
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "cps_shortnr",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
