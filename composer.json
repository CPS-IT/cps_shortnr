{
  "name": "cpsit/cps-shortnr",
  "description": "Builds links to pages and extension records with a tiny url",
  "type": "typo3-cms-extension",
  "keywords": [
    "TYPO3",
    "extension"
  ],
  "homepage": "https://gitlab.cps-projects.de/cps-it/cps_shortnr",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Nicole Cordes",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms-core": "^7.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "typo3/cms": "^7.6",
    "georgringer/news": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "CPSIT\\CpsShortnr\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CPSIT\\CpsShortnr\\Tests\\": "Tests/",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
    }
  },
  "replace": {
    "cps_shortnr": "self.version",
    "typo3-ter/cps_shortnr": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "preferred-install": {
      "typo3/cms": "source",
      "*": "dist"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/typo3conf/ext/",
      "[ -L .Build/typo3conf/ext/cps_shortnr ] || ln -snvf ../../../ .Build/typo3conf/ext/cps_shortnr"
    ]
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build"
    }
  }
}
